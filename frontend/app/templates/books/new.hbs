<h2>Add a new book</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">

      {{input type="text" value=model.title class="form-control" placeholder="The name of the book"}}
    </div>
  </div>
  <div class="form-group">
   <label class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
      {{textarea type="text" value=model.releaseyear class="form-control" placeholder="Year"}}
     </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveBooks' model}}>Add to author/book list</button>
</div>
  </div>
</div>
